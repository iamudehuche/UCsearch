<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.ucsearch.application.ucsearch.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:id="@+id/username_view_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@color/theme_color"
        android:background="@color/colorPrimary"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/avatar_view_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        fresco:roundAsCircle="false"
        fresco:placeholderImage="@drawable/noavatar" />

    <TextView
        android:id="@+id/url_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/link_activity_profile"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"/>

</LinearLayout>