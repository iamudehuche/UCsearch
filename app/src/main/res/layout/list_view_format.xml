<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/layout_selector"
    android:clickable="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="application.ucsearch.application.ucsearch.MainActivity">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/avatar_view_main"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/username_view_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatar_view_main"
            android:layout_toEndOf="@id/avatar_view_main"/>

</RelativeLayout>